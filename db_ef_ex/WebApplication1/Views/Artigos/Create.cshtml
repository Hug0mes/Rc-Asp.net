@model ef_2.Models.Artigo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Artigo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtaStock" class="control-label"></label>
                <input asp-for="QtaStock" class="form-control" />
                <span asp-validation-for="QtaStock" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <div class="input-group">
                    <select class="form-control" asp-for="CategoriaId"
                            asp-items="@(new SelectList(ViewBag.catList,"Value","Text"))">
                        <option>Selecione uma opção</option>
                    </select>
                    &nbsp;&nbsp;
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#progressBarCenter" id="refreshCategorias">Atualizar</button>
                </div>

                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            loadCategorias();

            $("#refreshCategorias").click(function () {
                loadCategorias();
            });
        });

        function loadCategorias(){
            $.ajax({
                type: "GET",
                url: "/api/Categorias",
                data: "{}",
                success: function (data) {
                    var s = '<option value="-1">Selecione uma Categoria</option>';
                    for (var i = 0; i < data.length; i++) {
                        s += '<option value="' + data[i].id + '">' + data[i].nome + '</option>';
                    }
                    $("#CategoriaId").html(s);
                }
            });
        }
    </script>
 

}
