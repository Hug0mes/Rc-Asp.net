@model FabricanteViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>fabricante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Fabricante.Id" />
            <div class="form-group">
                <label asp-for="Fabricante.Nome" class="control-label"></label>
                <input asp-for="Fabricante.Nome" class="form-control" />
                <span asp-validation-for="Fabricante.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Fabricante.Imagem" />
                <img src=@ImageHelper.GetImageLink(Model.Fabricante.Imagem, "fabricantes") class="rounded-circle" height="80" width="80" asp-append-version="true" />

                <label asp-for="FicheiroImagem" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="FicheiroImagem" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="FicheiroImagem" class="text-danger"></span>

                <div class="form-group">
                    <label asp-for="RemoverImagem" class="control-label"></label>
                    <input asp-for="RemoverImagem" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
